        <thead>
            <tr>
                <th>职位名称</th>
                <th>公司名称</th>
                <th>匹配度</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
           <button type="button" class="btn btn-primary btn-block" onclick="window.location.href='/'">返回主页</button>
        </div>
    </div>
</div>

